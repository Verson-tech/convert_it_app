@{
    ViewData["Title"] = "Index";
}
<style>
    .container{
        width: 45%;
        padding: 20px;
        display: inline-block;
    }
    .main-div {
        background-color: #e2e8f0;
    }
    @@media (max-width: 450px) {
        .main-div {
            display: flex;
            flex-direction: column;
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 90%;
        }
        .container {
            width: fit-content;
        }

     }


</style>

<div class="main-div">
        @*number input*@
        <div class="container">
            <form>
                <div class="form-group">
                    <label for="usr">Enter a number</label>
                    <input type="number" class="form-control" id="usr">
                </div>
                <div class="form-group">
                    <label for="pwd">Enter a number:</label>
                    <input type="number" class="form-control" id="pwd">
                </div>
            </form>
        </div>



        @*unit selection*@
        <div class="container">
            <form>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">From (unit):</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>Kilometer</option>
                        <option>Meter</option>
                        <option>Centimeter</option>
                        <option>Millimeter</option>
                        <option>Micrometer</option>
                        <option>Nanometer</option>
                        <option>Mile</option>
                        <option>Yard</option>
                        <option>Foot</option>
                        <option>Inch</option>
                        <option>Nautical mile</option>
                    </select>

                    <label for="exampleFormControlSelect1">To (unit):</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>Foot</option>
                        <option>Kilometer</option>
                        <option>Meter</option>
                        <option>Centimeter</option>
                        <option>Millimeter</option>
                        <option>Micrometer</option>
                        <option>Nanometer</option>
                        <option>Mile</option>
                        <option>Yard</option>
                        <option>Inch</option>
                        <option>Nautical mile</option>
                    </select>
                </div>
            </form>
        </div>

        @*submi*@  
        <div class="container">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
</div>
