@{
    ViewData["Title"] = "Index";
}
<style>
    .container {
        width: 45%;
        padding: 20px;
        display: inline-block;
    }

    .main-div {
        background-color: #e2e8f0;
    }

    table{
        justify-items: center;
    }

    @@media (max-width: 450px) {
        .main-div {
            display: flex;
            flex-direction: column;
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 90%;
        }

        .container {
            width: fit-content;
        }
    }
</style>

<div class="main-div">
 
    <div class="container">
        <form id="frm1" action="Calculate.html">
            <table>
                <tr id="switch">
                    <td>Convert</td>
                    <td>
                        <input type="number" id="InputValue" placeholder="">
                    </td>
                </tr>
                <tr>
                    <td>
                        <p style="background-color: whitesmoke; border-radius: 5%; font-size: xx-large; text-align: center; " id="test-1"></p>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p style="background-color: whitesmoke; border-radius: 5%; font-size: xx-large; text-align: center; " id="test"></p>
                    </td>
                </tr>
            </table>

            <input type="button" id="xxx" onclick="Calculate()" value="See the result">
            <p style="background-color: whitesmoke; border-radius: 5%; font-size: xx-large; text-align: center; " id="reset"></p>
        </form>
    </div>

    <div class="container" id="container">
        <div class="form-group">
            <label for="exampleFormControlSelect1">From (unit):</label>
            <select class="form-control" id="convertFrom">
