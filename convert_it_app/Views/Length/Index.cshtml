<form id="frm1" action="Calculate.html">
    <table>
        <tr>
            <td>Convert unit</td>
            <td>
                <input type="number" id="Kilometers" placeholder="">kilometeres
            </td>
        </tr>
        <tr>
            <td>miles</td>
            <td style="background-color:aqua;">
                <p id="test"></p>
            </td>
        </tr>
    </table>
    <input type="button" onclick="Calculate()" value="calculate">
    </form>
    <script>
        function Calculate() {
            var LengthInput = document.getElementById("Kilometers").value;
            var Operand = 1.609;
            var Result = LengthInput / Operand;
            document.getElementById("test").innerHTML = Result;
        }
    </script>
