                <option value="m">Meter</option>
                <option value="cm">Centimeter</option>
                <option value="mili">Millimeter</option>
                <option value="mile">Mile</option>
                <option value="yard">Yard</option>
                <option value="ft">Foot</option>
                <option value="inch">Inch</option>
                <option value="nautical">Nautical mile</option>
            </select>

            <label for="exampleFormControlSelect1">To (unit):</label>
            <select class="form-control" id="convertTo">
                <option value="toFt">Foot</option>
                <option value="toKm">Kilometer</option>
                <option value="toM">Meter</option>
                <option value="toCm">Centimeter</option>
                <option value="toMilim">Millimeter</option>
                <option value="toMile">Mile</option>
                <option value="toYard">Yard</option>
                <option value="toInch">Inch</option>
                <option value="toNautical">Nautical mile</option>
            </select>
        </div>
    </div>
</div>

